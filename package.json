{
	"name": "use-captured-state",
	"version": "1.1.3",
	"description": "Quickly create components that can access values from components inside it like forms and form inputs. Simply add a container and replace useState with a new hook!",
	"main": "build/index.js",
	"type": "module",
	"scripts": {
		"build": "webpack --config ./webpack.config.js",
		"jsdoc": "jsdoc -c jsdoc.json",
		"continuous-build": "nodemon --exec \"npm run build && npm link ../useformcaptureproject/node_modules/react\"",
		"continuous-jsdoc": "nodemon --exec \"jsdoc -c jsdoc.json && http-server -c-1 docs/\"",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "Marvin Lee",
	"homepage": "https://malee31.github.io/use-captured-state",
	"license": "ISC",
	"keywords": [
		"react",
		"hook",
		"useCapturedState",
		"forms",
		"inputs",
		"useState",
		"context"
	],
	"peerDependencies": {
		"react": ">=16.8.0"
	},
	"devDependencies": {
		"@babel/core": "^7.17.10",
		"@babel/plugin-transform-runtime": "^7.17.10",
		"@babel/preset-env": "^7.17.10",
		"@babel/preset-react": "^7.16.7",
		"babel-loader": "^8.2.5",
		"docdash": "^1.2.0",
		"http-server": "^14.1.0",
		"jsdoc": "^3.6.10",
		"nodemon": "^2.0.16",
		"react": ">=16.8.0",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/malee31/use-captured-state.git"
	},
	"bugs": {
		"url": "https://github.com/malee31/use-captured-state/issues"
	}
}